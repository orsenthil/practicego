{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Go: Run Current File",
            "type": "shell",
            "command": "go",
            "args": ["run", "${file}"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "label": "Go: Run Package",
            "type": "shell",
            "command": "go",
            "args": ["run", "."],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "label": "Go: Build",
            "type": "shell",
            "command": "go",
            "args": ["build", "."],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${fileDirname}"
            }
        }
    ]
}
